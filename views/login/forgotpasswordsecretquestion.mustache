{{>header}}


<main class="container pt-5 mt-5" role="main">
<h1>Confirm Secret Answer</h1>
<form action="/forgotpasswordconfirmsecretanswer" method="post">
    <div class="form-group">
    <label for="secretQuestion">Secret Question:</label>
    <input id="secretQuestion" class="form-control" type="text" name="secretQuestion" placeholder="Secret Question" value="{{secretQuestion}}" readonly> 
    </div>
        <div class="form-group">
    <label for="secretAnswer">Secret Answer:</label>
    <input id="secretAnswer" class="form-control" type="text" name="secretAnswer" placeholder="Secret Answer" required> 
    </div>
    <input type="submit" value="Confirm"> 

</form>
    {{#errorMessage}}
    <div class="alert alert-danger mx-auto w-25 text-center" role="alert">
        {{errorMessage}}
    </div>
    {{/errorMessage}}
</main>

{{>scripts}}
{{>footer}}