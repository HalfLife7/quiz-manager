{{>header}}

<main class="container pt-5 mt-5" role="main">
    <h1>Update Password</h1>
    <p>You have entered the correct secret answer!</p>
    <p>You may update the password for {{email}}</p>
    <form action="/forgotpasswordupdatepassword" method="post">
        <div class="form-group">
            <label for="password">Password:</label>
            <input id="password" class="form-control" type="password" name="password" placeholder="Password" required>
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirm Password:</label>
            <input id="confirmPassword" class="form-control" type="password" name="confirmPassword"
                placeholder="Confirm Password" required>
        </div>
        <input type="submit" value="Confirm">
    </form>
    {{#errorMessage}}
    <div class="alert alert-danger mx-auto w-25 text-center" role="alert">
        {{errorMessage}}
    </div>
    {{/errorMessage}}
</main>
{{>scripts}}
{{>footer}}