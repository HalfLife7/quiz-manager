<main class="container" role="main">
<h1 class="mt-5 pt-5">Edit Question</h1>
<h2>Question Details</h2>
<a class="btn btn-secondary mb-2" href="/manage/quizzes/{{questionData.quiz_id}}" role="button">Back</a>
<button class="btn btn-primary mb-2" type="submit" form="editQuestionForm">Save Question</button>
<form id="editQuestionForm" method="post"
    action="/manage/quizzes/{{questionData.quiz_id}}/question/{{questionData.question_id}}/edit">

    </div>
    <div class="form-group">
        <label for="questionType">Type</label>
        <input required type="text" readonly class="form-control" name="questionType" id="questionType"
            placeholder="Question Type" value="{{questionData.type}}">
    </div>
    <div class="form-group">
        <label for="questionText">Question Text</label>
        <textarea class="form-control" name="questionText" id="questionText" rows="3">{{questionData.text}}</textarea>
    </div>
    <h2>Answers</h2>
    <div id="answers">
        {{#questionAnswersData}}
        <div class="form-row">
            <div class="form-group col-md-9 form-group">
                <input required type="hidden" name="answerId{{questionNumber}}" value="{{question_answer_id}}">
                <label class="sr-only" for="answerText{{questionNumber}}">answer_text</label>
                <input required {{readOnlyAnswers}} type="text" name="answerText{{questionNumber}}" class="form-control"
                    id="answerText{{questionNumber}}" value="{{answer_text}}"
                    placeholder="Answer {{questionNumber}} Text">
            </div>
            <div class="custom-control custom-radio form-group">
                <input required value="isCorrect{{questionNumber}}" type="radio" id="isCorrect{{questionNumber}}"
                    name="isCorrect" class="custom-control-input {{is_correct}}">
                <label class="custom-control-label" for="isCorrect{{questionNumber}}">Correct?</label>
            </div>
        </div>
        {{/questionAnswersData}}
    </div>
</form>
</main>



{{>scripts}}

<script type="text/javascript">
    // check off answers that are correct
    $(document).ready(function () {
        $('.correct').prop("checked", true);
    });

</script>

